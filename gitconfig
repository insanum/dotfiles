[alias]
	####################
	g = grep --break --heading --line-number
	####################
	d = icdiff
	dd = diff --patch-with-stat -U10
	dp = diff --patience --patch-with-stat -U10
	dt = difftool
	####################
	tree = log --graph --decorate --date=short --pretty=format:\"%Cgreen%h%Creset %Cblue%ad%Creset %s%d [%Cred%an%Creset]\"
	####################
	s = status
	####################
	# Broadcom Gerrit push...
	pb = push --tags origin HEAD:refs/for/master
