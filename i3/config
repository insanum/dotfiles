# ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font -*-terminus-bold-r-*-*-18-*-*-*-*-*-*-*

focus_follows_mouse yes

# Switch between tiling layer and floating layer
bindsym Mod4+Shift+t focus mode_toggle

# move/resize floating windows (left/right press)
floating_modifier Mod4

# Toggle tiling/floating of the current window
bindsym Mod4+Shift+space floating toggle

# Borders!
bindsym Mod4+b border toggle

# Fullscreen
bindsym Mod4+f fullscreen
# Global Fullscreen!
bindsym Mod4+Shift+f fullscreen global

# Stacking
bindsym Mod4+s layout stacking

# Tabbed
bindsym Mod4+t layout tabbed

# Default
bindsym Mod4+d layout default

# Focus
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

# Move
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# Snap
bindsym Mod4+Control+h layout stacking
bindsym Mod4+Control+j layout stacking
bindsym Mod4+Control+k layout stacking
bindsym Mod4+Control+l layout stacking

# Focus Container
bindsym Mod4+Control+a focus parent; focus left
bindsym Mod4+Control+s focus parent; focus down
bindsym Mod4+Control+w focus parent; focus up
bindsym Mod4+Control+d focus parent; focus right

# Move Container
bindsym Mod4+Shift+a focus parent; move left
bindsym Mod4+Shift+s focus parent; move down
bindsym Mod4+Shift+w focus parent; move up
bindsym Mod4+Shift+d focus parent; move right

# Workspace
bindsym Mod4+F1 workspace 1
bindsym Mod4+F2 workspace 2
bindsym Mod4+F3 workspace 3
bindsym Mod4+F4 workspace 4
bindsym Mod4+F5 workspace 5
bindsym Mod4+F6 workspace 6
bindsym Mod4+F7 workspace 7
bindsym Mod4+F8 workspace 8
bindsym Mod4+F9 workspace 9
bindsym Mod4+F10 workspace 10
bindsym Mod4+F11 workspace 11
bindsym Mod4+F12 workspace 12

# Move to Workspace
bindsym Mod4+Shift+F1 move workspace 1
bindsym Mod4+Shift+F2 move workspace 2
bindsym Mod4+Shift+F3 move workspace 3
bindsym Mod4+Shift+F4 move workspace 4
bindsym Mod4+Shift+F5 move workspace 5
bindsym Mod4+Shift+F6 move workspace 6
bindsym Mod4+Shift+F7 move workspace 7
bindsym Mod4+Shift+F8 move workspace 8
bindsym Mod4+Shift+F9 move workspace 9
bindsym Mod4+Shift+F10 move workspace 10
bindsym Mod4+Shift+F11 move workspace 12
bindsym Mod4+Shift+F12 move workspace 12

