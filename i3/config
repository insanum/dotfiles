# kill the current client
bindsym Mod4+Shift+c kill

# Exit i3
bindsym Mod4+Shift+q exit
# Restart i3 (inplace)
bindsym Mod4+Control+q restart
# Reload i3
bindsym Mod4+q reload

bindsym Mod4+Return exec /usr/bin/urxvtc -tr -tn screen-256color
bindsym Mod4+p exec dwm_launch prog
bindsym Mod4+Shift+p exec dwm_launch mpc
bindsym Mod4+Control+p exec gmrun
bindsym XF86AudioPrev exec amixer sset Master 2-
bindsym XF86AudioNext exec amixer sset Master 2+
bindsym XF86AudioLowerVolume exec amixer sset Master 2-
bindsym XF86AudioRaiseVolume exec amixer sset Master 2+
bindsym Mod4+Down exec amixer sset Master 2-
bindsym Mod4+Up exec amixer sset Master 2+

